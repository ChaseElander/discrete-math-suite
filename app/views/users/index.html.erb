<% provide(:title, 'All users') %>

<h4>Currently Logged In</h4>
<ul class="users">
    <li>
      <%= link_to current_user.name %>
      <%= current_user.last_seen %>
    </li>
</ul>

<h4>All Users: CSCE-222</h4>


<ul class="users">
<div class="row">
<em><h5>Section 1</h5></em>
  <div class="col s6" style="background-color:pink;">
    <em><h6>User Information</h6></em>
    <!-- Items Column -->
    <div class="cell gradable" style="text-align:left">
      <% @users.each do |user| %>
        <li>
        <% if user.section == "1" %>
          <%= "User_ID: " %>
          <%= user.id %>
          <%= "--" %>
          <%= link_to user.name, "/student_profile" %>
        <% end %>
        </li>
      <% end %>
    </div>
  </div>

  <div class="col s6" style="background-color:#85C1E9;">
    <em><h6>Lastest Activities</h6></em>
    <!-- Items Column -->
    <div class="cell gradable" style="text-align:left">
      <% @users.each do |user| %>
        <li>
        <% if user.section == "1" %>
          <% if user.last_seen.nil? %>
            <%= "Never logged in" %>
          <% else %>
            <%= "Last seen on: " %>
            <%= user.last_seen %>
            <% if user.num_attempt.nil? %>
              <%= "No attempts"%>
            <% else %>
              <%= "Number of Attemps: "%>
              <%= user.num_attempt%> 
            <%end%>
            
          <% end %>
        <% end %>
        </li>
      <% end %>
    </div>
  </div>

</div>
</ul>


