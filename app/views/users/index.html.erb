<% provide(:title, 'All users') %>

<h4>Currently Logged In</h4>
<ul class="users">
    <li>
      <%= link_to current_user.name %>
      <%= current_user.last_seen %>
    </li>
</ul>

<h4>All Users</h4>

<ul class="users">

<div class="row">

  <div class="col s6" style="background-color:pink;">
    <em><h5>User Name</h5></em>
    <!-- Items Column -->
    <div class="cell gradable" style="text-align:left">
      <% @users.each do |user| %>
        <li>
          <%= link_to user.name %>
        </li>
      <% end %>
    </div>
  </div>

  <div class="col s6" style="background-color:#85C1E9;">
    <em><h5>Lastest Activities</h5></em>
    <!-- Items Column -->
    <div class="cell gradable" style="text-align:left">
      <% @users.each do |user| %>
        <li>
          <% if user.last_seen.nil? %>
            <%= "Never logged in" %>
          <% else %>
            <%= "Last seen on: " %>
            <%= user.last_seen %>
          <% end %>
        </li>
      <% end %>
    </div>
  </div>

</div>

</ul>